<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:WeightLoss_App.ViewModels"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             x:Class="WeightLoss_App.Views.Weight">

    <ContentPage.Content>
        <StackLayout Margin="10" Spacing="10">
            <chart:SfCartesianChart HeightRequest="250">
                <chart:SfCartesianChart.XAxes>
                    <chart:DateTimeAxis IntervalType="Days"/>
                </chart:SfCartesianChart.XAxes>
                <chart:SfCartesianChart.YAxes>
                    <chart:NumericalAxis />
                </chart:SfCartesianChart.YAxes>
                <chart:LineSeries ItemsSource="{Binding Weights}"
                                  XBindingPath="DateTime"
                                  YBindingPath="Weight"
                                  ShowDataLabels="True">
                    <chart:LineSeries.StrokeWidth>3</chart:LineSeries.StrokeWidth>
                </chart:LineSeries>
            </chart:SfCartesianChart>

            <Entry Text="{Binding Weight}" />
            <Button Text="Add Weight" Command="{Binding AddWeightCommand}" />
            <CollectionView
                ItemsSource="{Binding Weights}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItem Text="Delete"
                                           IconImageSource="delete.png"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:WeightViewModel}}, Path=DeleteWeightCommand}"
                                           CommandParameter="{Binding .}"/>
                            </SwipeView.RightItems>
                            <Border Stroke="{StaticResource Primary}"
                                    StrokeShape="RoundRectangle 10,10,10,10">
                                <Grid ColumnDefinitions="*, *, *" Margin="10">
                                    <Label Grid.Column="0" Grid.ColumnSpan="1" Text="{Binding Weight, StringFormat='{0} Kg'}" FontSize="20" />
                                    <Label Grid.Column="2" Text="{Binding DateTime, StringFormat='{0:dd/MM/yyyy}'}" FontSize="20" />
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>